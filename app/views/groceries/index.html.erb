<p id="notice"><%= notice %></p>

<h1>Listing Groceries</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groceries.each do |grocery| %>
      <tr>
        <td><%= grocery.list_id %></td>
        <td><%= grocery.product_id %></td>
        <td><%= grocery.quantity %></td>
        <td><%= grocery.availability %></td>
        <td><%= link_to 'Show', grocery %></td>
        <td><%= link_to 'Edit', edit_grocery_path(grocery) %></td>
        <td><%= link_to 'Destroy', grocery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

